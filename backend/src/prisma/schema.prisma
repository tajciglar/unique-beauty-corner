generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String
  password String
}

model Termin {
  terminId  Int         @id @default(autoincrement())
  date      DateTime
  startTime String
  endTime   String
  naVoljo   Boolean     @default(true)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Naro훾ila Naro훾ila[]
}

model Naro훾ila {
  naro훾iloId Int      @id @default(autoincrement())
  ime         String
  email       String
  telefon     String
  storitve    String[]
  cena        Int
  terminId    Int
  termin      Termin   @relation(fields: [terminId], references: [terminId])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
