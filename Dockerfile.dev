FROM node:18-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy project files
COPY . .

# Enable Prisma client generation
RUN npx prisma generate

# Environment variables for Next.js/Express hot reload
ENV CHOKIDAR_USEPOLLING=true
ENV WATCHPACK_POLLING=true

EXPOSE 3000

# ðŸ‘‡ Run in dev mode (hot reload)
CMD ["npm", "run", "dev"]
